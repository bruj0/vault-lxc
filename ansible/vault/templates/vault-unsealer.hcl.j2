storage "file" {
  path    = "/var/vault_data"
}
listener "tcp" {
  address = "{{ HOSTNAME }}:8200"
  tls_cert_file = "/vault/config/ssl/{{ HOSTNAME }}.pem"
  tls_key_file = "/vault/config/ssl/{{ HOSTNAME }}.key"
}
ui = "true"
telemetry {
  prometheus_retention_time = "30s"
  disable_hostname          = true
}
disable_clustering = "true"
raw_storage_endpoint = true
log_level = "debug"